<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingFunction.SettingMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="4" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/ic_person"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="101dp"
                tools:srcCompat="@mipmap/ic_person"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000" />


            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/bigTitle"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/graybox"
                android:gravity="center"
                android:text="개인정보 설정"
                android:textColor="@color/bigTitle"
                android:textSize="17sp" />

            <Button
                android:id="@+id/myInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="내 정보 수정"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/unregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="회원 탈퇴"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="로그 아웃"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/graybox"
                android:gravity="center"
                android:text="아이 정보 관리"
                android:textColor="@color/bigTitle"
                android:textSize="17sp" />

            <Button
                android:id="@+id/kidInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="아이 정보 관리"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/graybox"
                android:gravity="center"
                android:text="내역 조회"
                android:textColor="@color/bigTitle"
                android:textSize="17sp" />

            <Button
                android:id="@+id/miaList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="미아 신고 내역"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/miaList2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="미아 제보 내역"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/graybox"
                android:gravity="center"
                android:text="어플리케이션 설정"
                android:textColor="@color/bigTitle"
                android:textSize="17sp" />

            <Button
                android:id="@+id/setAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="알람설정"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/graybox"
                android:gravity="center"
                android:text="미아 신고"
                android:textColor="@color/bigTitle"
                android:textSize="17sp" />

            <Button
                android:id="@+id/miaSingo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="단기 미아 신고하기"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/miaSingo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="장기 미아 신고하기 (찾고있어요)"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/miaSingo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbox"
                android:onClick="onClickBtn"
                android:text="장기 미아 신고하기 (찾아주세요)"
                android:textColor="@color/bigTitleSelected"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>