<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bigTitleSelected"
    tools:context=".lossChildFunction.LongLossChildDI">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/longCurrentImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="imgClk"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <ImageView
                    android:id="@+id/longOldImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="imgClk"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars[0]" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/whitebox"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/graybox"
                    android:gravity="center"
                    android:text="이름"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/nameBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/graybox"
                    android:gravity="center"
                    android:text="실종 당시 나이"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/ageBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/whitebox"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/graybox"
                    android:gravity="center"
                    android:text="실종 날짜"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lossDateBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/whitebox"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/graybox"
                    android:gravity="center"
                    android:text="실종 장소"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lossSightBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/whitebox"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/graybox"
                    android:gravity="center"
                    android:text="연락처"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/callBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/whitebox"
                    android:onClick="callPhome"
                    android:text="연락하기" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/graybox"
                    android:gravity="center"
                    android:text="특징"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/characteresticBox"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/whitebox"
                    android:gravity="center"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/replyLists"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/smallTitle"
                    android:textColor="@color/bigTitleSelected" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputReply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/whitebox"
                    android:gravity="center"
                    android:textColor="@color/bigTitle"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/enterReply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:onClick="writeComment"
                    android:text="입력" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>